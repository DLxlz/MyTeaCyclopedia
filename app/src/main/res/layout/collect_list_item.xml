<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:padding="10dp"
    >

    <TextView
        android:id="@+id/showTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="日照绿茶”品牌价值8.85亿 居山东茶类之首"
        android:textSize="15sp"
        android:textColor="#556"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_below="@id/showTitle"
        android:id="@+id/showSource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="买买茶"
        android:textSize="9sp"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/showTitle"
        />
    <TextView
        android:id="@+id/showNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/showSource"
        android:layout_toRightOf="@+id/showSource"
        android:layout_marginLeft="10dp"
        android:text="茶铭小屋"
        android:textSize="9sp"
        />
    <TextView
        android:id="@+id/showCreatTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/showSource"
        android:layout_toRightOf="@+id/showNickname"
        android:layout_marginLeft="10dp"
        android:text="01月04日10:47"
        android:textSize="9sp"
        />

</RelativeLayout>